<!DOCTYPE HTML>
<html>
<head lang=en>
	<title><%= session[:launch] %> | r/Spacex Mission Control</title>
	<link rel=icon type=image/png href=/images/iss-16.png sizes=16x16>
	<link rel=icon type=image/png href=/images/iss-32.png sizes=32x32>
	<link rel=stylesheet href=css/all.css>
	<script async src=https://platform.twitter.com/widgets.js></script>
	<script src=js/packages.js></script>
	<script src=js/scripts.js></script>
	<%= if session[:time] then "<script>window.time = #{session[:time]}</script>" end %>
	<%= if session[:noshow] then "<script>window.noshow = true</script>" end %>
</head>
<body>
	<div id=loader class=loader>
		<% for _ in 1..6 %>
			<div></div>
		<% end %>
	</div>

	<% if session[:video] and session[:video] != '' %>
		<iframe class=youtube src=https://youtube.com/embed/<%= session[:video] %>?autoplay=0></iframe>
	<% else %>
		<iframe class=youtube src=''></iframe>
	<% end %>

	<section class=status>
		<a href=# onclick='document.body.classList.toggle("interface-left")'>
			<img id=interface-right src=https://img.shields.io/badge/interface-right-grey.svg alt='interface right'>
			<img id=interface-left src=https://img.shields.io/badge/interface-left-grey.svg alt='interface left'>
		</a>

		<span id=status-liveupdate> <%# allow updates via AJAX later %>
			<%= render_erb 'sections/status' %>
		</span>
	</section>

	<section class=reddit>
		<%= render_erb 'sections/live_post' %>
	</section>

	<section class=interface>
		<span class=icons>
			<i id=info-button class='fa fa-info-circle' onclick='document.getElementById("info").showModal()'></i>
			<i id=youtube-button class='fa fa-youtube-play' onclick='setYoutube()'></i>
			<a href=logout id=logout><i class='fa fa-sign-out'></i></a>
		</span>
		<%= render_erb 'sections/interface' %>
	</section>

	<section class=logo></section>

	<section class='timer unset' id=timer onclick='document.getElementById("launchTime").showModal()'>Set launch time</section>

	<section class=twitter>
		<a class=twitter-timeline data-aria-polite=rude data-chrome='noheader nofooter noborders transparent' data-dnt=true	data-link-color=#005288 href=https://twitter.com/theZcuber/lists/r-spacex-mission-control></a>
	</section>

	<dialog id=info><%= render_erb 'sections/info' %></dialog>

	<dialog id=launchTime>
		<h2>Enter the launch time</h2>
		<span id=datetime-format>(YYYY-MM-DD HH:MM:SS)<br></span> <%# only gets rendered if browser doesn't support datetime-local %>
		(in your timezone)
		<br><br>

		<input type=datetime-local id=datetime step=1><br><br> <%# step=1 displays seconds %>
		<button onclick='setLaunchTime(document.getElementById("datetime").value)'>Set time</button>
		<button onclick='setLaunchTime(null)'>Clear timer</button>
	</dialog>

	<dialog id=yt-dialog>
		<h2>Enter YouTube link to webcast</h2>
		<input pattern='(?:https?:\/\/)?(?:www\.)?youtu(?:\.be|be\.com)\/(?:watch\?v=)?([\w-]{11,})'><br><br>
		<button class=clear>Clear</button>
		<button class=update>Update</button>
	</dialog>
</body>
</html>
